@model List<CategoryIdAndNameViewModel>

@for (int i = 0; i < Model.Count; i++)
{
    <li>
        <a class="@(i == 0 ? "" : ("sub-category-" + @i))"
           asp-route="Category"
           asp-route-categoryId="@Model[i].Id"
           asp-route-categoryName="@Model[i].Name">
            @Model[i].Name
        </a>
    </li>
}