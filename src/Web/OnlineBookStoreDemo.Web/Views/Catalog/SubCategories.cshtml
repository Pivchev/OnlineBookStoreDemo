@model NavigationCategoryViewModel
<!-- Start Bradcaump area -->
<div class="ht__bradcaump__area bg-image--4">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="bradcaump__inner text-left">
                    <h2 class="bradcaump-title">Books</h2>
                    <nav class="bradcaump-content">
                        <a class="breadcrumb_item" asp-controller="Home" asp-action="Index">Home</a>
                        <span class="brd-separetor">/</span>
                        <span class="breadcrumb_item active">Books</span>
                        <span class="brd-separetor">/</span>
                        <span class="breadcrumb_item active">Books</span>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Bradcaump area -->
<!-- Start Shop Page -->
<div class="page-shop-sidebar left--sidebar bg--light-gray section-padding--lg">
    <div class="container">
        <div class="row">
            <!-- Shop Aside -->
            <div class="col-lg-3 col-12 order-2 order-lg-1 md-mt-40 sm-mt-40">
                <div class="shop__sidebar">
                    <!-- Categories Navigation widget aside -->
                    <aside class="wedget__categories poroduct--cat sidebar-section">
                        <h3 class="wedget__title categories-title"><a href="/">Back to Homepage</a></h3>
                        <ul>
                            <!-- Parent Categories Component -->
                            @for (int i = 0; i < Model.ParentsList.Count; i++)
                            {
                                <li>
                                    <a class="@(i == 0 ? "" : ("sub-category-" + @i))"
                                       asp-route="Category"
                                       asp-route-categoryId="@Model.ParentsList[i].Id"
                                       asp-route-categoryName="@Model.ParentsList[i].Name">
                                        @Model.ParentsList[i].Name
                                    </a>
                                </li>
                            }
                            <!-- End Parent Categories Component -->

                            <li class="active-category">
                                <span class="current-page @(Model.ParentsList.Count > 0 ? "sub-category-" +Model.ParentsList.Count : "")">@Model.Name</span>
                            </li>

                            <!-- Sub Categories -->
                            @foreach (var subCategory in Model.SubCategoriesList)
                            {
                                <li>
                                    <a class="@(Model.ParentsList.Count > 0 ? "sub-category-" + (Model.ParentsList.Count+1) : "")"
                                       asp-route="Category"
                                       asp-route-categoryId="@subCategory.Id"
                                       asp-route-categoryName="@subCategory.Name">
                                        @subCategory.Name
                                    </a>
                                </li>
                            }
                            <!-- End Sub Categories -->
                        </ul>
                    </aside>
                    <!-- End Navigation Categories widget aside -->
                    <!-- Filter widget aside -->
                    <partial name="~/Views/Catalog/Partial/_FilterCatalogPartial.cshtml" />
                    <!-- End Filter widget aside -->
                    <!-- Banner aside -->
                    <partial name="~/Views/Catalog/Partial/_CatalogBannersPartial.cshtml" />
                    <!-- End Banner aside -->
                </div>
            </div>
            <!-- End Shop Aside -->
            <!-- Shop Main -->
            <div class="col-lg-9 col-12 order-1 order-lg-2 sidebar-right-section">
                <!-- BooksList Category Title -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="shop-list-title d-flex flex-wrap flex-md-nowrap justify-content-between">
                            <h2 class="title books-section">All @Model.Name</h2>
                        </div>
                    </div>
                </div>
                <!-- Sort / Change View BooksList Header -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="shop__list__wrapper d-flex flex-wrap flex-md-nowrap justify-content-between">
                            <div class="shop__list nav justify-content-center" role="tablist">
                                <a class="nav-item nav-link active" data-toggle="tab" href="#nav-grid" role="tab"><i class="fa fa-th"></i></a>
                                <a class="nav-item nav-link" data-toggle="tab" href="#nav-list" role="tab"><i class="fa fa-list"></i></a>
                            </div>
                            <p>Showing 1–12 of 40 results</p>
                            <div class="orderby__wrapper">
                                <span>Sort By</span>
                                <select class="shot__byselect">
                                    <option>Default sorting</option>
                                    <option>HeadPhone</option>
                                    <option>Furniture</option>
                                    <option>Jewellery</option>
                                    <option>Handmade</option>
                                    <option>Kids</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Products View -->
                <partial name="~/Views/Catalog/Partial/_BooksListPartial.cshtml" />
                <!-- End Products View -->
            </div>
            <!-- End Shop Main -->
        </div>
    </div>
</div>
